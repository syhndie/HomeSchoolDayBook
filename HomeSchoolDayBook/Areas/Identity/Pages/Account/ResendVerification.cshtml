@page
@model ResendEmailConfirmModel
@{
    ViewData["Title"] = "Verify Email Address";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="alert alert-info">
    <p>
        If the email address entered is associated with an unverified HomeSchoolDayBook account, a new verification email message will be sent.
        Click on the link in the email message to verify your account. 
        A maximum of five verification emails can be sent.
    </p>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


@page
@model DownloadDataModel
@{
    ViewData["Title"] = "Download Your Data";
    ViewData["ActivePage"] = ManageNavPages.DownloadData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-8 bottom-margins" >
        <form id="download-entries" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <button asp-page-handler="entries" type="submit" class="btn btn-default">Download Your Entries as a CSV File</button>
        </form>
    </div>
    <div class="col-md-8">
        <form id="download-grades" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <button asp-page-handler="grades" type="submit" class="btn btn-default">Download Your Entry Grades as a CSV file</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@page "{id:int?}"
@model HomeSchoolDayBook.Pages.Subjects.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<p class="text-danger">@Model.DidNotSaveMessage</p>

<h4>Subject</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Subject.ID" />
            <div class="form-group">
                <label asp-for="Subject.Name" class="control-label"></label>
                <input asp-for="Subject.Name" class="form-control" autofocus/>
                <span asp-validation-for="Subject.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.CheckBoxFor(model => model.Subject.IsActive, htmlAttributes: new { @checked = true })
                @Html.DisplayNameFor(model => model.Subject.IsActive)
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model HomeSchoolDayBook.Pages.Admin.EditModel
@{
ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-xs-12">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>
<div class="row">
    <hr />
</div>
<form method="post">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-xs-4">
            <label>
                @Html.CheckBoxFor(model => model.EditUser.EmailConfirmed)
                @Html.DisplayNameFor(model => model.EditUser.EmailConfirmed)
            </label>
        </div>
        @{
            if (!Model.EditUser.EmailConfirmed)
            {
                <text>
                    <div class="form-group col-xs-6">
                        <input type="submit" value="Resend Verification Email" class="btn btn-default" asp-page-handler="ResendEmail" asp-route-UserToEditID="@Model.UserToEditID" />
                    </div>
                </text>
            }
        }
    </div>
    <div class="row">
        <div class="form-group col-sm-6 col-md-4">
            <label asp-for="EditUser.Email" class="control-label"></label>
            <input asp-for="EditUser.Email" class="form-control" autofocus />
            <span asp-validation-for="EditUser.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-xs-7 col-sm-3 col-md-2">
            <label asp-for="EditUser.EmailConfirmsCount" class="control-label"></label>
            <input type="text" asp-for="EditUser.EmailConfirmsCount" class="form-control" />
            <span asp-validation-for="EditUser.EmailConfirmsCount" class="text-danger"></span>
        </div>
        <div class="form-group col-xs-7 col-sm-3 col-md-2">
            <label asp-for="EditUser.ForgotPasswordEmailCount" class="control-label"></label>
            <input type="text" asp-for="EditUser.ForgotPasswordEmailCount" class="form-control" />
            <span asp-validation-for="EditUser.ForgotPasswordEmailCount" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-6 col-md-4">
            <label asp-for="EditUser.PendingEmail" class="control-label"></label>
            <input asp-for="EditUser.PendingEmail" class="form-control" />
            <span asp-validation-for="EditUser.PendingEmail" class="text-danger"></span>
        </div>
    </div>
        <div class="row">
        <div class="form-group col-xs-7 col-sm-3 col-md-2">
            <label asp-for="EditUser.NewEmailConfirmsCount" class="control-label"></label>
            <input type="text" asp-for="EditUser.NewEmailConfirmsCount" class="form-control" />
            <span asp-validation-for="EditUser.NewEmailConfirmsCount" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-6 col-md-4">
            <label asp-for="EditUser.AccountCreatedTimeStamp" class="control-label"></label>
            <input asp-for="EditUser.AccountCreatedTimeStamp" class="form-control" disabled />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-xs-6">            
            <input type="submit" value="Save" class="btn btn-default" asp-page-handler="Edit" asp-route-UserToEditID="@Model.UserToEditID" /> |
            <a asp-page="./Index">All Users</a>
        </div>
    </div>
</form>


@page
@model HomeSchoolDayBook.Pages.Admin.DeleteModel
@{
    ViewData["Title"] = "Delete a User";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this user?</h3>

<hr />

<p>@Html.DisplayFor(model => model.UserToDelete.UserName)</p>

<hr />

<div>
    <form method="post">
        <input type="hidden" asp-for="UserToDelete.Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">All Users</a>
    </form>
</div>


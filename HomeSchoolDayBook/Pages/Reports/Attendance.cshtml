@page
@model HomeSchoolDayBook.Pages.Reports.AttendanceModel
@{
    Layout = "_ReportsLayout";
    ViewData["Title"] = "Attendance";
}

<h3>Attendance, @Html.DisplayFor(model => model.StartDate) to @Html.DisplayFor(model => model.EndDate) </h3>
<hr />
<div class="row">
    <div class="col-md-6">
        @foreach (var student in Model.StudentAttendances)
        {
            <div class="row">
                <div class="col-md-6">
                    <h4>@student.Student.Name: </h4>
                    <p>present @student.DaysAttended out of @student.TotalDays days</p>

                </div>
            </div>
            <hr />
        }
    </div>
</div>


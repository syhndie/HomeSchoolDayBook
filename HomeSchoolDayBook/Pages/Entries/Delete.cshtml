@page "{id:int?}"
@model HomeSchoolDayBook.Pages.Entries.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Entry</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Entry.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Entry.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Entry.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Entry.Date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Entry.ComputedTimeSpent)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Entry.ComputedTimeSpent)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Entry.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Entry.Description)
        </dd>
        <dt>
            Students
        </dt>
        <dd>
            <table class="table">
                @foreach (var item in Model.Entry.Enrollments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.Name)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt>
            Subjects
        </dt>
        <dd>
            <table class="table">
                @foreach (var item in Model.Entry.SubjectAssignments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject.Name)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Entry.ID" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

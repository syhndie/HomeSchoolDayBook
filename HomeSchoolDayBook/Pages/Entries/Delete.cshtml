@page "{id:int?}"
@model HomeSchoolDayBook.Pages.Entries.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Entry</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Entry.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Entry.Date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Entry.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Entry.Title)
        </dd>
        <dt>
            Students
        </dt>
        <dd>
            @foreach (var enr in Model.Entry.Enrollments)
            {
                @enr.Student.Name <br />
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Entry.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Entry.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Entry.ComputedTimeSpent)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Entry.ComputedTimeSpent)
        </dd>
        <dt>
            Subjects
        </dt>
        <dd>
            @foreach (var sa in Model.Entry.SubjectAssignments)
            {
                @sa.Subject.Name <br />
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Entry.ID" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

@page "{id:int?}"
@model HomeSchoolDayBook.Pages.Entries.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Entry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EntryVM.ID" />
            <div class="form-group">
                <label asp-for="EntryVM.Title" class="control-label"></label>
                <input asp-for="EntryVM.Title" class="form-control" />
                <span asp-validation-for="EntryVM.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntryVM.Date" class="control-label"></label>
                <input asp-for="EntryVM.Date" class="form-control" />
                <span asp-validation-for="EntryVM.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntryVM.EnteredHours" class="control-label"></label>
                <input asp-for="EntryVM.EnteredHours" class="form-control" /> hours
                <span asp-validation-for="EntryVM.EnteredHours" class="text-danger"></span>
                <input asp-for="EntryVM.EnteredMinutes" class="form-control" /> minutes
                <span asp-validation-for="EntryVM.EnteredMinutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntryVM.Description" class="control-label"></label>
                <textarea asp-for="EntryVM.Description" class="form-control"></textarea>
                <span asp-validation-for="EntryVM.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntryVM.SubjectCheckBoxes" class="control-label"></label>
                <table>
                    <tr>
                        @{
                            int cnt = 0;

                            foreach (var checkbox in Model.EntryVM.SubjectCheckBoxes)
                            {
                                string isChecked = checkbox.Assigned ? "checked" : "";
                                if (cnt++ %2 == 0)
                                {
                                    @:</tr><tr>
                                }
                                @:<td>
                                    <input type="checkbox" 
                                           name="@checkbox.Name" 
                                           value="@checkbox.ID" 
                                           @isChecked />
                                           @checkbox.Name
                                @:</td>
                            }

                        }
                    </tr>
                </table>             
            </div>
            <div class="form-group">
                <label asp-for="EntryVM.StudentCheckBoxes" class="control-label"></label>

                @foreach (var checkbox in Model.EntryVM.StudentCheckBoxes)
                {
                    <p>
                        @checkbox.Name, @checkbox.Assigned
                    </p>
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

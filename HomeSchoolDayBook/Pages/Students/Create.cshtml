@page
@model HomeSchoolDayBook.Pages.Students.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<p class="text-danger">@Model.ErrorMessage </p>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Student.Name" class="control-label"></label>
                <input asp-for="Student.Name" class="form-control" autofocus />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.CheckBoxFor(model => model.Student.IsActive, htmlAttributes: new { @checked = true })
                @Html.DisplayNameFor(model => model.Student.IsActive)
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
